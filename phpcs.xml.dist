<?xml version="1.0"?>
<ruleset name="LiteImage">
    <description>PHP CodeSniffer configuration for LiteImage plugin</description>

    <!-- Show progress and sniff codes -->
    <arg value="ps"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Show sniff and severity -->
    <arg value="ns"/>

    <!-- Check PHP files only -->
    <arg name="extensions" value="php"/>

    <!-- Check all files in src and root directory -->
    <file>./src</file>
    <file>./liteimage.php</file>
    <file>./uninstall.php</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/includes/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>

    <!-- Use PSR-12 as base ruleset -->
    <rule ref="PSR12">
        <!-- Allow WordPress-specific naming conventions -->
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
    </rule>

    <!-- Set minimum PHP version -->
    <config name="minimum_supported_wp_version" value="4.6"/>
    <config name="testVersion" value="7.4-"/>
</ruleset>
