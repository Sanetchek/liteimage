{
  "name": "sanetchek/liteimage",
  "type": "wordpress-plugin",
  "version": "3.3.0",
  "description": "Image optimization plugin for WordPress using Intervention Image.",
  "keywords": ["WordPress", "Plugin", "Image Optimization", "WebP", "Intervention Image"],
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.1",
    "intervention/image": "^3.11.3"
  },
  "require-dev": {
    "wp-cli/i18n-command": "^2.2.5",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3"
  },
  "scripts": {
    "make-pot": "vendor/bin/wp i18n make-pot . languages/liteimage.pot",
    "cs-check": "phpcs --standard=phpcs.xml.dist",
    "cs-fix": "phpcbf --standard=phpcs.xml.dist",
    "test": "phpunit",
    "prod": [
      "composer make-pot",
      "composer install --no-dev --optimize-autoloader"
    ]
  },
  "autoload": {
    "psr-4": {
      "LiteImage\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": false
    }
  }
}
